<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dinuscxj.com.demo.MainActivity">

    <com.dinuscxj.shootrefreshview.ShootRefreshView
        android:id="@+id/shoot_refresh_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:gradientEndColor="@android:color/holo_green_dark"
        app:gradientStartColor="@android:color/holo_red_dark"
        app:strokeWidth="10dp" />

    <com.dinuscxj.shootrefreshview.ShootView
        android:id="@+id/shoot_view"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <SeekBar
        android:id="@+id/pull_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="50dp" />


    <Button
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:text="loading" />

    <Button
        android:id="@+id/reset_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="reset" />


</LinearLayout>
